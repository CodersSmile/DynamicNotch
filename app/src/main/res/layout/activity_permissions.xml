<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradiant"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10dp"
            android:src="@drawable/ic_permission" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_30dp"
            android:gravity="center"
            android:text="@string/permission"
            android:textAppearance="@style/TextAppearance.MyApp.Caption"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewLockscreen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_noti"
            android:drawablePadding="@dimen/_10dp"
            android:gravity="center_vertical"
            android:text="@string/permision1"
            android:textAppearance="@style/TextAppearance.MyApp.Caption"
            android:textColor="@color/white" />

        <ToggleButton
            android:id="@+id/toggle_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:background="@null"
            android:button="@drawable/btntoggle"
            android:checked="false"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:textOff=""
            android:textOn="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_enable_notification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_noti"
            android:drawablePadding="@dimen/_10dp"
            android:gravity="center_vertical"
            android:text="@string/permision2"
            android:textAppearance="@style/TextAppearance.MyApp.Caption"
            android:textColor="@color/white" />

        <ToggleButton
            android:id="@+id/toggle_notification_access"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:background="@null"
            android:button="@drawable/btntoggle"
            android:checked="false"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:textOff=""
            android:textOn="" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/enable__bluetooth_access_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_enable__bluetooth_access"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_noti"
            android:drawablePadding="@dimen/_10dp"
            android:gravity="center_vertical"
            android:text="@string/permision2"
            android:textAppearance="@style/TextAppearance.MyApp.Body2"
            android:textColor="@color/white" />

        <ToggleButton
            android:id="@+id/toggle_bluetooth_access"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:background="@null"
            android:button="@drawable/btntoggle"
            android:checked="false"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:textOff=""
            android:textOn="" />

    </LinearLayout>

    <TextView
        android:id="@+id/mTxtNext"
        android:layout_width="wrap_content"
        android:layout_height="?actionBarSize"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_50dp"
        android:layout_marginBottom="@dimen/_50dp"
        android:background="@drawable/bg_gradiant_btn"
        android:gravity="center"
        android:paddingStart="@dimen/_100dp"
        android:paddingEnd="@dimen/_100dp"
        android:text="@string/next"
        android:textAppearance="@style/TextAppearance.MyApp.Body1"
        android:textColor="@color/white" />

</LinearLayout>